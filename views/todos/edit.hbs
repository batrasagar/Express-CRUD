<div class="row">
  <div class="col col-md-12">
    <h4>Todo List</h4>
  </div>
</div>

<div class="row">
  <div class="col col-md-12">
    <form class="form" action="/todos/edit/{{id}}" method="POST">
      <input type="hidden" name="_method" value="PATCH">
      <div class="form-group">
        <label for="title">Enter Title</label>
        <input type="text" value="{{title}}" class="form-control" name="title" id=" title" aria-describedby="helpId"
          placeholder="">
        <small id="helpId" class="form-text text-muted">Help text for Title</small>
      </div>
      <div class="form-group">
        <label for="description">Enter description</label>
        <textarea type="text" class="form-control" name="description" id=" description" aria-describedby="helpId"
          placeholder="">{{description}}</textarea>
        <small id="helpId" class="form-text text-muted">Help text for description</small>
      </div>
      <div class="form-group">
        <label for="priority">Enter priority</label>
        <select class="form-control" name="priority">
          {{#select priority}}
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
          <option value="6">6</option>
          {{/select}}
        </select>
        <small id="helpId" class="form-text text-muted">Help text for priority</small>
      </div>
      <div class="form-group">
        <button type="SUBMIT" class="btn btn-success">UPDATE</button>
        &nbsp;
        <a href="/todos" class="btn btn-primary">Show ALL</a>
      </div>
  </div>
  </form>
</div>
</div>